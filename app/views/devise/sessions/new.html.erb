<div class="two-columns">

  <div class="left-column">
    <h2>Iniciar Sesión</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Recuérdame', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Iniciar sesión", class: "main-btn" %>
      </div>
      <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="right-column">
    <h2>¿No tienes una cuenta aún?</h2>
    <h4>Pide ayuda a un supervisor y empieza a usar la plataforma</h4>
  </div>

</div>
